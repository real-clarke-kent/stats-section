---
import Card from "./Card.astro";
import ArrowIcon from "@/icons/ArrowRight.astro";

import { Image } from "astro:assets";

type Props = {
  image: ImageMetadata;
  loading?: "eager" | "lazy";
};

const { loading = "lazy", image } = Astro.props;
---

<Card>
  <Image
    src={image}
    loading={loading}
    densities={[1, 1.5, 2]}
    class="h-72 w-full object-cover"
    alt=""
  />
  <div class="flex flex-col gap-3 px-4 py-6">
    <div class="flex flex-col gap-2">
      <slot name="header" />
      <slot name="title" />
    </div>
    <div class="flex flex-col gap-6 font-medium">
      <p class="line-clamp-2 font-medium"><slot /></p>
      <a
        href="#"
        class="inline-flex w-fit items-center gap-1.5 rounded text-brand focus:outline-none focus:ring-4 focus:ring-brand"
      >
        <span class="px-0.5">Read more</span>
        <ArrowIcon />
      </a>
    </div>
  </div>
</Card>
