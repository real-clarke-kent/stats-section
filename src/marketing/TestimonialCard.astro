---
import Avatar from "@/components/Avatar.astro";
import Card from "@/components/Card.astro";

type Props = {
  image: ImageMetadata;
  name: string;
  socialName: string;
};

const { image, name, socialName } = Astro.props;
---

<Card class="flex flex-col gap-4 p-6">
  <header class="flex gap-4">
    <Avatar image={image} loading="eager" />
    <div class="flex flex-col gap-min overflow-hidden">
      <h1 class="overflow-hidden text-ellipsis text-nowrap">{name}</h1>
      <p class="overflow-hidden text-ellipsis text-nowrap text-sm">
        {socialName}
      </p>
    </div>
  </header>
  <p>
    <slot />
  </p>
</Card>
